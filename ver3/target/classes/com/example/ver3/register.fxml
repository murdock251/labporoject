<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="450.0" spacing="15.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ver3.controllers.RegisterController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <children>
        <Label text="Create Account">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <Label text="Username (for login):" style="-fx-font-weight: bold;" />
        <TextField fx:id="usernameField" promptText="Enter username" />

        <Label text="Full Name:" style="-fx-font-weight: bold;" />
        <TextField fx:id="nameField" promptText="Enter your full name" />

        <Label text="Email:" style="-fx-font-weight: bold;" />
        <TextField fx:id="emailField" promptText="Enter email address" />

        <Label text="Password:" style="-fx-font-weight: bold;" />
        <PasswordField fx:id="passwordField" promptText="Minimum 6 characters" />

        <Label text="Phone Number (optional):" style="-fx-font-weight: bold;" />
        <TextField fx:id="phoneField" promptText="+880 XXX-XXX-XXXX" />

        <Label text="Address (optional):" style="-fx-font-weight: bold;" />
        <TextField fx:id="addressField" promptText="City, Country" />

        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" prefHeight="45.0" prefWidth="300.0" text="Register" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>

        <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackToLogin" prefHeight="40.0" prefWidth="300.0" text="Back to Login" style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-size: 14;" />

        <Label fx:id="messageLabel" textFill="RED" visible="false" wrapText="true" />
    </children>
</VBox>
